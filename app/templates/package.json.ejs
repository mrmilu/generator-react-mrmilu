{
  "name": "<%= projectName %>",
  "version": "0.0.1",
  "private": true,
  "description": "<%= projectNameCanonical %> application",
  "author": "Mr Milu",
  "license": "ISC",
  "scripts": {
    "dev": "run-p start:watch serve",
    "start:dev": "yarn build:css && dotenv -e ./env/development.env -- snowpack dev",
    "start:watch": "yarn build:css && dotenv -e ./env/development.env -- snowpack build --watch",
    "serve": "live-server build",
<%_ if (hasTailwind) { -%>
    "build": "run-s build:css build:code",
    "build:code": "yarn build:css && dotenv -e ./env/production.env -- snowpack build",
    "build:css": "postcss tailwind.css -o src/assets/tailwind.parsed.css",
<%_ } else { -%>
    "build": "dotenv -e ./env/production.env -- snowpack build",
<%_ } -%>
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src/",
    "lint:fix": "yarn lint --fix",
    "clean:build": "rimraf build dist",
    "clean:install": "rimraf node_modules",
    "clean": "run-p clean:build clean:install",
    "lint:stage": "eslint --fix",
    "postinstall": "is-ci || husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
<%_ if (hasRedux) { -%>
    "@reduxjs/toolkit": "1.5.0",
<%_ } -%>
<%_ if (hasAxios) { -%>
    "axios": "0.21.1",
<%_ } -%>
    "json2typescript": "1.4.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
<%_ if (hasRedux) { -%>
    "react-redux": "7.2.2",
<%_ } -%>
<%_ if (hasRecoil) { -%>
    "recoil": "0.1.2",
<%_ } -%>
<%_ if (hasStyledComponents) { -%>
    "styled-components": "5.2.1",
    "twin.macro": "2.2.3"
<%_ } -%>
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "7.12.13",
    "@babel/plugin-transform-react-jsx": "7.12.17",
    "@babel/preset-env": "7.12.17",
    "@babel/preset-react": "7.12.13",
    "@babel/preset-typescript": "7.12.17",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@snowpack/plugin-babel": "2.1.6",
    "@snowpack/plugin-dotenv": "2.0.5",
    "@snowpack/plugin-postcss": "1.1.0",
    "@snowpack/plugin-sass": "1.3.0",
    "@snowpack/plugin-typescript": "1.2.1",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@testing-library/react-hooks": "5.0.3",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.1",
<%_ if (hasRedux) { -%>
    "@types/react-redux": "7.1.16",
<%_ } -%>
    "@types/snowpack-env": "2.3.3",
<%_ if (hasStyledComponents) { -%>
    "@types/styled-components": "5.1.7",
<%_ } -%>
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "autoprefixer": "10.2.4",
    "babel-eslint": "10.1.0",
<%_ if (hasStyledComponents) { -%>
    "babel-plugin-styled-components": "1.12.0",
<%_ } -%>
    "cssnano": "4.1.10",
    "dotenv-cli": "4.0.0",
    "eslint": "7.20.0",
    "eslint-config-prettier": "8.0.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-sonarjs": "0.6.0",
    "husky": "5.1.1",
    "identity-obj-proxy": "3.0.0",
    "is-ci": "3.0.0",
    "jest": "26.6.3",
    "jest-chain": "1.1.5",
    "jest-extended": "0.11.5",
    "jest-styled-components": "7.0.3",
    "lint-staged": "10.5.4",
    "live-server": "1.2.1",
    "npm-check-updates": "11.1.5",
    "npm-run-all": "4.1.5",
    "postcss": "8.2.6",
    "postcss-cli": "8.3.1",
    "postcss-import": "14.0.0",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "snowpack": "3.0.11",
<%_ if (hasTailwind) { -%>
    "tailwindcss": "2.0.3",
    "tailwindcss-elevation": "1.0.1",
<%_ } -%>
    "ts-jest": "26.5.1",
    "typescript": "4.1.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint:stage"
    ]
  }
}
