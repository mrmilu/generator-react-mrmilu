{
  "name": "@<%= projectName %>/project",
  "version": "0.0.1",
  "private": true,
  "description": "<%= projectNameCanonical %> application",
  "author": "Mr Mil√∫",
  "license": "ISC",
  "scripts": {
    "watch": "yarn clean:build && run-p start:watch serve",
    "serve": "live-server build",
    "build:code": "run-s translate snowpack:build",
<%_ if (hasTailwind) { -%>
    "start:watch": "run-s translate build:css snowpack:watch",
    "start:dev": "run-s translate build:css snowpack:dev",
    "build:css": "postcss tailwind.css -o src/assets/tailwind.parsed.css && sleep 2",
    "build": "run-s clean:build build:css build:code",
<%_ } else { -%>
    "start:watch": "run-s translate snowpack:watch",
    "start:dev": "run-s translate snowpack:dev",
    "build": "run-s clean:build build:code",
<%_ } -%>
    "translate": "ts-node -P tsconfig.run.json scripts/transform.ts",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "snowpack:dev": "dotenv -e ../../env/development.env -- snowpack dev",
    "snowpack:watch": "dotenv -e ../../env/development.env -- snowpack build --watch",
    "snowpack:build": "snowpack build",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src/",
    "lint:fix": "yarn lint --fix",
    "stylelint": "stylelint \"**/*.{css,scss,sass}\" \"!**/tailwind.css\"",
    "stylelint:fix": "yarn stylelint --fix",
    "clean:build": "rimraf build dist src/assets/tailwind.parsed.css",
    "clean:install": "rimraf node_modules",
    "clean": "run-p clean:build clean:install"
  },
  "dependencies": {
<%_ if (hasRedux) { -%>
    "@reduxjs/toolkit": "1.5.0",
<%_ } -%>
    "@sentry/react": "6.2.1",
<%_ if (hasAxios) { -%>
    "axios": "0.21.1",
<%_ } -%>
    "json2typescript": "1.4.1",
    "react": "17.0.1",
<%_ if (hasRedux) { -%>
    "react-redux": "7.2.2",
<%_ } -%>
<%_ if (hasRecoil) { -%>
    "recoil": "0.1.3",
<%_ } -%>
<%_ if (hasStyledComponents) { -%>
    "styled-components": "5.2.1",
<%_ } -%>
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@snowpack/plugin-babel": "2.1.6",
    "@snowpack/plugin-postcss": "1.1.0",
    "@snowpack/plugin-sass": "1.3.0",
    "@snowpack/plugin-typescript": "1.2.1",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@testing-library/react-hooks": "5.1.0",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.2",
<%_ if (hasRedux) { -%>
    "@types/react-redux": "7.1.16",
<%_ } -%>
    "@types/snowpack-env": "2.3.3",
<%_ if (hasStyledComponents) { -%>
    "@types/styled-components": "5.1.7",
<%_ } -%>
<%_ if (hasStyledComponents) { -%>
    "babel-plugin-styled-components": "1.12.0",
<%_ } -%>
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "i18next": "19.9.2",
    "jest-styled-components": "7.0.3",
    "live-server": "1.2.1",
    "postcss": "8.2.8",
    "postcss-cli": "8.3.1",
    "postcss-import": "14.0.0",
    "postcss-preset-env": "6.7.0",
    "react-i18next": "11.8.9",
<%_ if (hasTailwind) { -%>
    "tailwindcss": "2.0.3",
    "tailwindcss-elevation": "1.0.1",
    "twin.macro": "2.3.0",
<%_ } -%>
    "snowpack": "3.0.13"
  }
}
